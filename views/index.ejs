<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background: linear-gradient(135deg, #74b9ff, #0984e3);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }
        
        .container {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 450px;
            padding: 30px;
            text-align: center;
        }
        
        h1 {
            color: #2d3436;
            margin-bottom: 30px;
            font-weight: 600;
        }
        
        .input-group {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-bottom: 25px;
        }
        
        .input-field {
            display: flex;
            flex-direction: column;
            text-align: left;
        }
        
        label {
            font-weight: 500;
            margin-bottom: 8px;
            color: #2d3436;
        }
        
        input {
            padding: 12px 15px;
            border: 2px solid #dfe6e9;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s ease;
        }
        
        input:focus {
            outline: none;
            border-color: #74b9ff;
            box-shadow: 0 0 0 3px rgba(116, 185, 255, 0.2);
        }
        
        button {
            background: linear-gradient(135deg, #74b9ff, #0984e3);
            color: white;
            border: none;
            padding: 14px;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }
        
        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(116, 185, 255, 0.4);
        }
        
        button:active {
            transform: translateY(0);
        }
        
        .weather-display {
            margin-top: 30px;
            padding: 20px;
            background: linear-gradient(135deg, #74b9ff, #0984e3);
            border-radius: 15px;
            color: white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        
        .location {
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 10px;
        }
        
        .temperature {
            font-size: 48px;
            font-weight: 700;
            margin: 15px 0;
        }
        
        .weather-icon {
            font-size: 60px;
            margin: 15px 0;
        }
        
        .description {
            font-size: 20px;
            margin-bottom: 20px;
            text-transform: capitalize;
        }
        
        .details {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }
        
        .detail-item {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        
        .detail-label {
            font-size: 14px;
            opacity: 0.8;
            margin-bottom: 5px;
        }
        
        .detail-value {
            font-size: 18px;
            font-weight: 600;
        }
        
        .error-message {
            color: #e74c3c;
            margin-top: 15px;
            font-weight: 500;
            padding: 10px;
            background-color: #ffeaea;
            border-radius: 5px;
            border: 1px solid #e74c3c;
        }
        
        @media (max-width: 480px) {
            .container {
                padding: 20px;
            }
            
            .temperature {
                font-size: 40px;
            }
            
            .weather-icon {
                font-size: 50px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Weather App</h1>
        
        <form action="/submit" method="post" class="input-group">
            <div class="input-field">
                <label for="latitude">Latitude</label>
                <input type="text" id="latitude" placeholder="e.g., 40.7128" name="lat" 
                       value="<%= typeof latitude !== 'undefined' ? latitude : '' %>">
            </div>
            
            <div class="input-field">
                <label for="longitude">Longitude</label>
                <input type="text" id="longitude" placeholder="e.g., -74.0060" name="long" 
                       value="<%= typeof longitude !== 'undefined' ? longitude : '' %>">
            </div>
            
            <button type="submit" id="get-weather">Get Weather</button>
        </form>

        <% if (error) { %>
            <div class="error-message" id="error-message">
                <%= error %>
            </div>
        <% } %>

        <% if (activity) { %>
            <div class="weather-display" id="weather-display">
                <div class="location" id="location">
                    <%= activity.name %>, <%= activity.sys.country %>
                </div>
                <div class="temperature" id="temperature">
                    <%= Math.round(activity.main.temp) %>Â°C
                </div>
                <div class="weather-icon" id="weather-icon">
                    <% 
                    const weatherIcon = activity.weather[0].main.toLowerCase();
                    let icon = 'â˜€ï¸';
                    if (weatherIcon.includes('cloud')) icon = 'â˜ï¸';
                    if (weatherIcon.includes('rain')) icon = 'ðŸŒ§ï¸';
                    if (weatherIcon.includes('snow')) icon = 'â„ï¸';
                    if (weatherIcon.includes('thunderstorm')) icon = 'â›ˆï¸';
                    if (weatherIcon.includes('drizzle')) icon = 'ðŸŒ¦ï¸';
                    if (weatherIcon.includes('mist') || weatherIcon.includes('fog')) icon = 'ðŸŒ«ï¸';
                    %>
                    <%= icon %>
                </div>
                <div class="description" id="description">
                    <%= activity.weather[0].description %>
                </div>
                
                <div class="details">
                    <div class="detail-item">
                        <div class="detail-label">Feels Like</div>
                        <div class="detail-value" id="feels-like">
                            <%= Math.round(activity.main.feels_like) %>Â°C
                        </div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Humidity</div>
                        <div class="detail-value" id="humidity">
                            <%= activity.main.humidity %>%
                        </div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Wind</div>
                        <div class="detail-value" id="wind">
                            <%= activity.wind.speed %> m/s
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html>